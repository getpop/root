{
    "name": "getpop/root",
    "type": "library",
    "description": "Declaration of dependencies shared by all PoP components",
    "keywords": [
        "PoP",
        "root"
    ],
    "homepage": "https://github.com/getpop/root",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "~7.4",
        "symfony/config": "^4.3",
        "symfony/dependency-injection": "^4.3",
        "symfony/dotenv": "^4.3",
        "symfony/yaml": "^4.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=9.3",
        "rector/rector": "dev-fix-inconsistent-remove-object-param",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/leoloso/rector.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "PoP\\Root\\": "src"
        },
        "files": [
            "lib/backporting/php80.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\Root\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist",
        "downgrade-code": "rector process --dry-run"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
