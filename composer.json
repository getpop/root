{
    "name": "getpop/root",
    "type": "library",
    "description": "Declaration of dependencies shared by all PoP components",
    "keywords": [
        "PoP",
        "root"
    ],
    "homepage": "https://github.com/getpop/root",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "require": {
        "php": "~7.1",
        "symfony/config": "^4.2",
        "symfony/dependency-injection": "^4.2",
        "symfony/yaml": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\Root\\": "src"
        },
        "files": [
            "initialize.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\Root\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
